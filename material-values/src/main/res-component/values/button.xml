<resources>

    <!-- Common values -->
    <dimen name="material_button_height_minimum">@dimen/material_baseline_grid_4.5x</dimen>
    <dimen name="material_button_touch_target_height_minimum">@dimen/material_baseline_grid_6x</dimen>
    <dimen name="material_button_width_minimum">@dimen/material_baseline_grid_11x</dimen>
    <dimen name="material_button_padding_horizontal">@dimen/material_baseline_grid_1x</dimen>
    <dimen name="material_button_gutter_horizontal">@dimen/material_baseline_grid_1x</dimen>
    <color name="material_button_text_color_disabled_light_theme">@color/material_color_black_26_percent</color>
    <color name="material_button_text_color_disabled_dark_theme">@color/material_color_white_30_percent</color>
    <dimen name="material_button_corner_radius">2dp</dimen>


    <!-- Flat button -->
    <dimen name="material_button_flat_elevation">@dimen/material_elevation_flat_button</dimen>
    <color name="material_button_flat_background_color_pressed_light_theme">@color/material_button_specific_color_medium_grey_40_percent</color>
    <color name="material_button_flat_background_color_pressed_dark_theme">@color/material_button_specific_color_light_grey_25_percent</color>


    <!-- Raised button -->
    <dimen name="material_button_raised_elevation_resting">@dimen/material_elevation_raised_button_resting</dimen>
    <dimen name="material_button_raised_elevation_pressed">@dimen/material_elevation_raised_button_pressed</dimen>
    <color name="material_button_raised_background_color_disabled_light_theme">@color/material_color_black_12_percent</color>
    <color name="material_button_raised_background_color_disabled_dark_theme">@color/material_color_white_12_percent</color>
    <!-- Dark normal background color  = Color shade 500 -->
    <!-- Dark pressed background color = Color shade 700 -->


    <!-- Toggle button -->
    <color name="material_button_icon_light_theme_light_icon_ripple_color">@color/material_color_white_30_percent</color>
    <color name="material_button_icon_light_theme_dark_icon_ripple_color">@color/material_color_black_12_percent</color>
    <color name="material_button_icon_dark_theme_light_icon_ripple_color">@color/material_color_white_20_percent</color>
    <!-- (light or dark theme) Color icon ripple color = color with 26% opacity -->


    <!-- Floating action button -->
    <dimen name="material_button_fab_size">@dimen/material_baseline_grid_7x</dimen>
    <dimen name="material_button_fab_icon_size">@dimen/material_icon_size_system</dimen>
    <dimen name="material_button_fab_mini_size">@dimen/material_baseline_grid_5x</dimen>
    <dimen name="material_button_fab_edge_margin">@dimen/material_content_edge_margin_horizontal</dimen>


    <!-- Button specific colors -->
    <!-- As these values are not common, they are only defined here -->
    <color name="material_button_specific_color_medium_grey_40_percent">#66999999</color>
    <color name="material_button_specific_color_light_grey_25_percent">#3FCCCCCC</color>

</resources>